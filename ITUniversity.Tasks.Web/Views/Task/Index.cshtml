@using ITUniversity.Tasks.Entities

@model ICollection<TaskBase>

@{ 
    ViewData["Title"] = "Список задач";
}

<div class="card">
    <div class="card-body">
        <table class="table">
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td style="padding-left: 0px; padding-right: 9px">
                            @await Html.PartialAsync("Task/RowDetails", task) 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("Create", "Task")" type="button" class="btn btn-primary">Добавить задачу</a>
    </div>
</div>

@section scripts
{
    <script scr="~/view-recources/task/scripts.js"></script>
}